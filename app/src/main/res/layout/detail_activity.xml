<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="horizontal">
<TextView
    android:text="Сумма"
    android:textSize="18dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="100dp"
    android:layout_marginStart="30dp">

</TextView>
    <TextView
        android:text="9000"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/money_text"
        android:layout_marginVertical="130dp"
        android:layout_marginStart="30dp">

    </TextView>
    <TextView
        android:text="Счёт"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="190dp"
        android:layout_marginStart="30dp"
        >

    </TextView>
    <TextView
        android:text="Основной"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="220dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/white"
        android:id="@+id/cash_text"
        android:textSize="25sp">

    </TextView>
    <TextView
        android:text="Категория"
        android:layout_width="wrap_content"
        android:layout_marginVertical="280dp"
        android:layout_marginStart="30dp"
        android:textSize="18dp"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:text="Здоровье"
        android:layout_marginVertical="310dp"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:id="@+id/category_text"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:text="Дата"
        android:textSize="18dp"
        android:layout_marginVertical="370dp"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:text="10.11.2001"
        android:layout_marginVertical="400dp"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_text"
        android:textColor="@color/white"
        android:textSize="25sp">

    </TextView>

    <ImageView
        android:id="@+id/to_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cross"
        android:layout_marginTop="20dp"
        android:layout_marginStart="355dp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:id="@+id/delete_button"
        android:backgroundTint="@color/red"
        android:gravity="center"
        android:text="Удалить"
        android:textSize="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
      >

    </Button>

</RelativeLayout>